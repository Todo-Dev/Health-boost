<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_nutrient"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_nutrient"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#2d2d2d"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/TextView_nutrientTitle"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Title"
            android:textColor="#2d2d2d"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/TextView_nutrientCalories"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Calories"
            android:textColor="#2d2d2d"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/TextView_nutrientProtein"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Protein"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/TextView_nutrientFat"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Fat"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/TextView_nutrientCarbs"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Carbs"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>